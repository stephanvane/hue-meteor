template(name='dashboard')
  .dashboard-page

    table
      tr
        td Hue range
        td: .slider#hue-slider
        td: #hue-display-lower
        td: #hue-display-upper

      tr
        td Bri range
        td: .slider#bri-slider
        td: #bri-display-lower
        td: #bri-display-upper

      tr
        td Sat range
        td: .slider#sat-slider
        td: #sat-display-lower
        td: #sat-display-upper
      tr
        td Transitiontime
        td: .slider#transitiontime-slider
        td(colspan='2'): #transitiontime-display
      tr
        td Synchronize colors
        td(colspan='2')
          input(type='checkbox')#synchronize-colors
      tr
        td Synchronize timing
        td(colspan='2')
          input(type='checkbox')#synchronize-timing

    button.add Add step
    button.start(disabled=startDisabled) Start
    button.stop Stop
    select
      each presets
        option()= name

    table
      thead
        tr
          th Hue-range
          th Bri-range
          th Sat-range
          th Transitiontime
      tbody
        each steps
          tr
            td= hue
            td= bri
            td= sat
            td= transitiontime
